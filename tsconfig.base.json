{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es6",
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@dspace/core": ["libs/core/src/index.ts"],
      "@dspace/products": ["libs/products/src/index.ts"],
      "@dspace/shared/animations": ["libs/shared/animations/src/index.ts"]
    }
  },
  "exclude": ["cypress.config.ts"]
}
